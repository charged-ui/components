{
  "compilerOptions": {
    "outDir": "./dist", // Output directory
    "rootDir": "./src", // Root directory of source files
    "declaration": true, // Generate .d.ts files
    "emitDeclarationOnly": true, // Only emit .d.ts files
    "module": "esnext", // Module system
    "target": "esnext", // Target JavaScript version
    "moduleResolution": "node", // Module resolution strategy
    "lib": ["esnext", "dom"], // Include DOM types
    "esModuleInterop": true, // Allow default imports from CommonJS modules
    "strict": true, // Enable strict type checking
    "skipLibCheck": true, // Skip type checking of declaration files
    "allowSyntheticDefaultImports": true, // Allow default imports from modules with no default export,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": false
  },
  "include": [
    "src/vite-env.d.ts",
    "src/components/**/*.ts",
    "src/backgrounds/**/*.ts"
  ], // Include all TypeScript files in src/ui
  "exclude": ["node_modules", "dist"] // Exclude these directories
}
